<?xml version="1.0" encoding="utf-8" ?>
<Buildings>

<!--====================== Replimat Terminal ======================--> 

  <ThingDef ParentName="BuildingBase">
    <defName>ReplimatTerminal</defName>
    <label>Replimat Terminal</label>
    <description>Synthesizes meals and beverages through molecular resequencing. Requires a connection to a Replimat Feedstock Tank via conduits.</description>
	<thingClass>Replimat.Building_ReplimatTerminal</thingClass>
    <graphicData>
      <texPath>Things/Building/replimatTerminal</texPath>
	  <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3,3)</drawSize>
    </graphicData>
	<uiIconPath>UI/replimatTerminal</uiIconPath>
	<constructEffect>ConstructMetal</constructEffect>
	<costList>
      <Steel>50</Steel>
	  <Component>20</Component>
	  <Plasteel>20</Plasteel>
    </costList>
	<AltitudeLayer>Building</AltitudeLayer>
    <fillPercent>1</fillPercent>
    <useHitPoints>True</useHitPoints>
	<statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToBuild>2000</WorkToBuild>
      <Flammability>1.0</Flammability>
      <Beauty>5</Beauty>
      <Mass>400</Mass>
    </statBases>
	<size>(1,1)</size>
	<minifiedDef>MinifiedFurniture</minifiedDef>
	<DesignationCategory>Replimat_Replimat</DesignationCategory>
	<Passability>Impassable</Passability>
	<castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.20</staticSunShadowHeight>
	<hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
	<building>
      <isMealSource>true</isMealSource>
	  <wantsHopperAdjacent>false</wantsHopperAdjacent>
      <soundDispense>ReplimatMaterialize</soundDispense>
    </building>
	<ingestible>
	<foodType>Meal</foodType>
	<nutrition>0.1</nutrition>
	</ingestible>
	<comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
		<startElectricalFires>true</startElectricalFires>
        <basePowerConsumption>500</basePowerConsumption>
      </li>
	  <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
    <researchPrerequisites>
      <li>MolecularNutrientResequencing</li>
    </researchPrerequisites>
  </ThingDef>
  
  <!--====================== Replimat Feedstock Tank ======================-->
  
  <ThingDef ParentName="BuildingBase">
    <defName>ReplimatFeedTank</defName>
    <label>Replimat Feedstock Tank</label>
    <description>Stores an organic particulate suspension for use by Replimat Terminals. Requires a hopper for raw food feedstock.</description>
    <graphicData>
      <texPath>Things/Building/replimatFeedTank</texPath>
	  <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(4,4)</drawSize>
    </graphicData>
	<uiIconPath>UI/replimatFeedTank</uiIconPath>
	<constructEffect>ConstructMetal</constructEffect>
	<costList>
      <Steel>50</Steel>
	  <Component>10</Component>
	  <Plasteel>80</Plasteel>
    </costList>
	<AltitudeLayer>Building</AltitudeLayer>
    <fillPercent>1</fillPercent>
    <useHitPoints>True</useHitPoints>
	<statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToBuild>4000</WorkToBuild>
      <Flammability>1.0</Flammability>
      <Mass>1000</Mass>
    </statBases>
	<size>(2,2)</size>
	<rotatable>false</rotatable>
	<DesignationCategory>Replimat_Replimat</DesignationCategory>
	<Passability>Impassable</Passability>
	<castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.20</staticSunShadowHeight>
	<building>
      <wantsHopperAdjacent>true</wantsHopperAdjacent>
    </building>
	<comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
		<startElectricalFires>true</startElectricalFires>
        <basePowerConsumption>250</basePowerConsumption>
      </li>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
    <researchPrerequisites>
      <li>MolecularNutrientResequencing</li>
    </researchPrerequisites>
  </ThingDef>
  
  <!--====================== Replimat Computer ======================-->
  
  <ThingDef ParentName="BuildingBase">
    <defName>ReplimatComputer</defName>
    <label>Replimat Computer</label>
    <description>Provides a wide range of meal and beverage recipes to all Replimat Terminals.</description>
    <graphicData>
      <texPath>Things/Building/replimatComputer</texPath>
	  <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(4,4)</drawSize>
    </graphicData>
	<uiIconPath>UI/replimatComputer</uiIconPath>
	<constructEffect>ConstructMetal</constructEffect>
	<costList>
      <Steel>50</Steel>
	  <Component>50</Component>
	  <Plasteel>20</Plasteel>
	  <IsolinearModule>1</IsolinearModule>
    </costList>
	<AltitudeLayer>Building</AltitudeLayer>
    <fillPercent>1</fillPercent>
    <useHitPoints>True</useHitPoints>
	<statBases>
      <MaxHitPoints>400</MaxHitPoints>
      <WorkToBuild>4000</WorkToBuild>
      <Flammability>1.0</Flammability>
      <Mass>750</Mass>
    </statBases>
	<size>(2,2)</size>
	<rotatable>false</rotatable>
	<DesignationCategory>Replimat_Replimat</DesignationCategory>
	<Passability>Impassable</Passability>
	<castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.20</staticSunShadowHeight>
	<building>
      <wantsHopperAdjacent>true</wantsHopperAdjacent>
    </building>
	<comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
		<startElectricalFires>true</startElectricalFires>
        <basePowerConsumption>250</basePowerConsumption>
      </li>
	  <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
    <researchPrerequisites>
      <li>MolecularNutrientResequencing</li>
    </researchPrerequisites>
  </ThingDef>

</Buildings>